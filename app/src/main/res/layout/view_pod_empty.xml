<?xml version="1.0" encoding="utf-8"?>
<com.padc.charleskeith.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_xlarge"
        tools:src="@drawable/ic_error_placeholder"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_empty"
        android:layout_centerHorizontal="true"
        android:paddingRight="@dimen/margin_medium"
        android:paddingLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/text_regular"
        android:textAlignment="center"
        tools:text="မိတ္ေဆြ ၾကည့္ ႐ႈ လို ေသာ item မွာ မထင္ မွတ္ ထား ေသာ ျပသနာ ေၾကာင့္ မထုတ္ ျပ ႏိုင္ေသး ပါ" />

</com.padc.charleskeith.viewpods.EmptyViewPod>
