<?xml version="1.0" encoding="utf-8"?>
<com.padc.charleskeith.viewpods.GalleryViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:src="@drawable/ic_close_black_24dp" />

    <ImageView
        android:id="@+id/iv_item_image_big"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/iv_close"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/imageback"
        android:src="@drawable/bag_placeholder" />

</com.padc.charleskeith.viewpods.GalleryViewPod>